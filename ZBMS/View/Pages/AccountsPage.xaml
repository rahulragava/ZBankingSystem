                            Height="30"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            CornerRadius="0,0,0,15">
                    <TextBlock FontSize="13"
                               HorizontalAlignment="Right"
                               Padding="10,5,10,5"
                               Text="Current" />
                </StackPanel>
                <TextBlock Grid.Row="1"
                           Margin="0,25,0,0"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           FontSize="20"
                           Text="{x:Bind AccountNumber,Mode=OneWay}" />
                <StackPanel HorizontalAlignment="Center"
                            Margin="0,5,0,0"
                            Grid.Row="2"
                            Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               x:Uid="Status"
                               Text="Status" />
                    <StackPanel Margin="10,0,10,0"
                                Background="{x:Bind AccountStatus, Mode=OneWay , Converter={StaticResource BackgroundColorConverter}}"
                                CornerRadius="4"
                                Padding="5,5,5,5">
                        <TextBlock FontSize="12"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Text="{x:Bind AccountStatus, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>
                <TextBlock  Grid.Row="3"
                            Padding="0,20,0,0"
                            FontSize="22"
                            Margin="10"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <Run Text="&#x20b9;" /> <Run Text="{x:Bind Balance, Mode=OneWay}" />
                </TextBlock>
                <!--<Button x:Name="ViewCurrentAccountButton"
                        Click="ViewCurrentAccountButton_OnClick"
                        Margin="0"
                        Grid.Row="5"
                        HorizontalAlignment="Center"
                        Content="View Details">
                </Button>-->
            </Grid>

        </DataTemplate>

