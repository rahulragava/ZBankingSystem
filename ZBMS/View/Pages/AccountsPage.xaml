<Page x:Class="ZBMS.View.Pages.AccountsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ZBMS.View.Pages"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:model="using:ZBMSLibrary.Entities.Model"
      xmlns:util="using:ZBMS.Util"
      xmlns:businessObject="using:ZBMSLibrary.Entities.BusinessObject"
      xmlns:converters="using:ZBMS.Util.Converters"
      xmlns:userControl="using:ZBMS.View.UserControl"
      xmlns:controls1="using:Microsoft.UI.Xaml.Controls"
      xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <converters:TypeToBackgroundConverter x:Key="BackgroundColorConverter" />

        <DataTemplate x:Key="SavingsAccountCardTemplate"
                      x:DataType="businessObject:SavingsAccountBObj">
            <Grid MinHeight="200"
                  MinWidth="300"
                  Margin="5"
                  CornerRadius="15,15,20,20"
                  BorderThickness="0"
                  BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}"
                  Background="{ThemeResource BackgroundColor}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            BorderThickness="1.5 0 0 1.5"
                            BorderBrush="{ThemeResource SavingsAccountCardColor}"
                            MaxWidth="200"
                            Height="30"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            CornerRadius="0,15,0,15">
                    <TextBlock FontSize="13"
                               HorizontalAlignment="Right"
                               Padding="10,5,10,5"
                               Text="Savings" />
                </StackPanel>
                <TextBlock Grid.Row="1"
                           Margin="0,25,0,0"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           FontSize="20"
                           Text="{x:Bind AccountNumber,Mode=OneWay}" />
                <StackPanel HorizontalAlignment="Center"
                            Margin="0,5,0,0"
                            Grid.Row="2"
                            Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               x:Uid="Status"
                               Text="Status" />
                    <StackPanel Margin="10,0,10,0"
                                Background="{x:Bind AccountStatus, Mode=OneWay , Converter={StaticResource BackgroundColorConverter}}"
                                CornerRadius="4"
                                Padding="5,5,5,5">
                        <TextBlock FontSize="12"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Text="{x:Bind AccountStatus, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>

                <TextBlock  Grid.Row="3"
                            Padding="0,20,0,0"
                            FontSize="22"
                            Margin="10"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <Run Text="&#x20b9;" /> <Run Text="{x:Bind Balance, Mode=OneWay}"></Run>
                </TextBlock>

                <!--<Button x:Name="ViewSavingsAccountButton"
                        Margin="20"
                        Click="ViewSavingsAccountButton_OnClick"
                        Grid.Row="4"
                        CornerRadius="8"
                        Style="{ThemeResource FeatureButtonStyle}"
                        HorizontalAlignment="Center"
                        Content="View Details">
                </Button>-->
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="CurrentAccountCardTemplate"
